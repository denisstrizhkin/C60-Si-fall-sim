units metal
dimension 3
boundary p p m
atom_style atomic
atom_modify map yes

read_data ${input_file}

pair_style tersoff/zbl
pair_coeff * * SiC.tersoff.zbl Si C
neighbor 3.0 bin

### groups ###
group vac id ${vac_ids}
group Si type 1
compute voro_vol Si voronoi/atom only_group
compute clusters vac cluster/atom 3

dump clusters vac custom 1 ${dump_crater} id x y z vx vy vz type c_clusters c_voro_vol[1]
run 0